<?php

/**
 * @file
 * Queue Watcher module file.
 */

/**
 * Implements hook_cron(). 
 */
function queue_watcher_cron() {
  /** @var \Drupal\queue_watcher\QueueWatcher $watcher **/
  $watcher = \Drupal::service('queue_watcher');
  $watcher->lookup();
  if ($watcher->foundProblems()) {
    $watcher->report();
  }
}
